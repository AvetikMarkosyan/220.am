---
import Title from "../components/Title.astro";
import sert_1 from "@/assets/sert_1.png";
import sert_2 from "@/assets/sert_2.png";
---

<section id="certifications" class="w-[90%] scroll-mt-[220px] mx-auto my-20 text-center">
  <Title subTitle="Our Certifications" title="Professional Standards We Maintain" />

  <div class="flex flex-wrap justify-center gap-10 mt-10">
    {[sert_1, sert_2].map((img, i) => (
      <div
        class="w-[280px] h-[280px] bg-white rounded-lg shadow-lg p-4 flex flex-col items-center justify-center hover:scale-105 transition-transform cursor-pointer"
        onclick={`document.getElementById('modal-${i}').showModal()`}
      >
        <img
          src={img.src}
          alt={`Certification ${i + 1}`}
          class="h-[200px] object-contain"
        />
        <p class="mt-3 text-base font-medium text-[#000F38]">
          Certification {i + 1}
        </p>
      </div>
    ))}
  </div>

  <!-- âœ… Modal Viewer -->
  {[sert_1, sert_2].map((img, i) => (
    <dialog
      id={`modal-${i}`}
      class="backdrop:bg-black/70 rounded-xl p-0 border-0"
    >
      <div class="relative">
        <button
          class="absolute top-3 right-4 text-white text-3xl font-bold"
          onclick={`document.getElementById('modal-${i}').close()`}
        >
          &times;
        </button>
        <img
          src={img.src}
          alt={`Certification ${i + 1}`}
          class="max-h-[90vh] max-w-[90vw] object-contain rounded-lg"
        />
      </div>
    </dialog>
  ))}
</section>
