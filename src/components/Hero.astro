---
import battery from "@/assets/battery.svg";
import heroBgDesktop from "@/assets/hero_worker_3.png";
import heroBgMobile from "@/assets/hero_worker_mobile.png"; // <-- optional, create a smaller image for mobile
---

<section
  id="home"
  class="relative w-full min-h-screen flex items-center justify-center text-white overflow-hidden"
>
  <!-- ✅ Responsive Background -->
  <picture>
    <!-- Mobile first -->
    <source srcset={heroBgMobile.src} media="(max-width: 768px)" />
    <!-- Desktop -->
    <img
      src={heroBgDesktop.src}
      alt="Electrical workers background"
      class="absolute inset-0 w-full h-full object-cover object-center"
    />
  </picture>

  <!-- ✅ Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#08003A]/70 to-[#08003A]/70"></div>

  <!-- ✅ Content -->
  <div class="relative z-10 text-center max-w-3xl px-6 sm:px-8">
    <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold leading-tight mb-6">
      Premium Electrical Solutions, <br class="hidden sm:block" />
      Built to Last
    </h1>

    <p class="text-sm sm:text-base md:text-lg text-gray-200 leading-relaxed mb-8 max-w-2xl mx-auto">
      At <span class="text-yellow-300 font-semibold">220.am</span>, we deliver
      top-quality electrical solutions designed to meet your unique needs.
      From residential to commercial and industrial services, our experienced
      team ensures safety, efficiency, and excellence in every project.
    </p>

    <!-- ✅ Button -->
    <div class="flex justify-center">
      <a
        href="#services"
        class="bg-white text-gray-900 px-6 sm:px-8 py-3 sm:py-4 text-base sm:text-lg rounded-full flex items-center gap-3 font-medium shadow-lg hover:bg-gray-200 transition-transform duration-300 hover:scale-105"
      >
        Explore more
        <img src={battery.src} alt="Battery icon" class="h-8 sm:h-10" />
      </a>
    </div>
  </div>
</section>

