---
import Title from "../components/Title.astro";

import worker_1 from "@/assets/worker_1.png";
import worker_2_industry from "@/assets/worker_2_industry.png";
import industrial_building_maintenance from "@/assets/industrial_building_maintenance.jpeg";
import group_movie from "@/assets/group_movie.png"
import { FaHome } from "react-icons/fa";
import { MdFactory } from "react-icons/md";
import { FaBuilding } from "react-icons/fa";
import { FaIndustry } from "react-icons/fa";

const services = [
  {
    id: "industrial",
    title: "Industrial & Building Maintenance",
    icon: FaIndustry,
    imageSrc: industrial_building_maintenance.src,
    description:
      "We specialize in maintaining industrial and commercial electrical systems to ensure maximum reliability and energy efficiency. Our maintenance services minimize downtime and help clients operate with confidence.",
  },
  {
    id: "residential",
    title: "Residential Electrical Installation",
    icon: FaHome,
    imageSrc: worker_1.src,
    description:
      "From wiring new homes to upgrading existing systems, we offer safe and efficient residential electrical installation services, ensuring your living spaces meet all safety and energy standards.",
  },
  {
    id: "industrial-installation",
    title: "Industrial Electrical Installation",
    icon: MdFactory,
    imageSrc: worker_2_industry.src,
    description:
      "Our industrial installation services are designed for factories, plants, and warehouses. We handle heavy-duty systems, automation, and control panel setups with precision.",
  },
  {
    id: "building",
    title: "Building Electrical Installation",
    icon: FaBuilding,
    imageSrc: group_movie.src,
    description:
      "We provide electrical infrastructure for large-scale commercial and residential buildings, including design, wiring, and equipment setup tailored to your needs.",
  },
];
---

<section id="services" class="flex flex-col items-center py-20 px-4 scroll-mt-[95px]">
  <Title subTitle="Our Services" title="What We Offer" />

  <!-- Service Cards -->
  <div
    class="flex flex-wrap justify-center gap-6 sm:gap-8 md:gap-10 w-full max-w-6xl mt-10"
  >
    {services.map((service) => (
      <div
        class="relative flex-[1_1_90%] sm:flex-[1_1_45%] lg:flex-[1_1_30%] max-w-[500px] h-[220px] sm:h-[250px] rounded-lg overflow-hidden group cursor-pointer shadow-md hover:shadow-lg transition-shadow"
        onclick="showServiceDetails(this)"
        data-id={service.id}
        data-img={service.imageSrc}
        data-title={service.title}
        data-desc={service.description}
      >
        <img
          src={service.imageSrc}
          alt={service.title}
          class="w-full h-full object-cover grayscale transition-all duration-300 group-hover:grayscale-0 group-hover:scale-105"
        />
        <div
          class="absolute inset-0 bg-blue-900/40 opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col items-center justify-center text-white"
        >
          <service.icon size={40} className="text-white mb-2" />
          <p class="text-center text-sm sm:text-base font-medium px-2">
            {service.title}
          </p>
        </div>
      </div>
    ))}
  </div>
</section>

<!-- Detail Section -->
<section
  id="service-details"
  class="hidden w-[90%] mx-auto my-20 text-center transition-all duration-300"
>
  <h2 id="detail-title" class="text-2xl sm:text-3xl font-semibold mb-4"></h2>
  <img
    id="detail-img"
    src=""
    alt="Service Image"
    class="mx-auto rounded-lg mb-4 max-h-[400px] shadow-lg object-cover w-full sm:w-auto"
  />
  <p
    id="detail-desc"
    class="max-w-3xl mx-auto text-gray-700 leading-relaxed text-base sm:text-lg px-2"
  ></p>
  <div class="mt-6">
    <button
      type="button"
      class="px-4 py-2 rounded bg-gray-200 hover:bg-gray-300 transition"
      onclick="hideServiceDetails()"
    >
      Close
    </button>
  </div>
</section>

<script is:inline>
  window.showServiceDetails = function (el) {
    const detailSection = document.getElementById("service-details");
    const img = document.getElementById("detail-img");
    const title = document.getElementById("detail-title");
    const desc = document.getElementById("detail-desc");

    const imageSrc = el.dataset.img;
    const t = el.dataset.title;
    const d = el.dataset.desc;

    if (imageSrc) {
      img.style.display = "block";
      img.src = imageSrc;
    } else {
      img.style.display = "none";
    }

    title.textContent = t || "";
    desc.textContent = d || "";

    detailSection.classList.remove("hidden");
    detailSection.scrollIntoView({ behavior: "smooth", block: "start" });
  };

  window.hideServiceDetails = function () {
    const detailSection = document.getElementById("service-details");
    detailSection.classList.add("hidden");
  };
</script>
